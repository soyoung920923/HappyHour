<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<!-- camelCase -->
	<!-- <settings>        
        <setting name="mapUnderscoreToCamelCase" value="true" />
    </settings> --> 

	<!-- typeAlias -->
	<typeAliases>	
	     <typeAlias type="com.mycompany.myapp.user.UserDTO" alias="User"/>
	     <typeAlias type="com.mycompany.myapp.board.BoardDTO" alias="Board"/>
	     <typeAlias type="com.mycompany.myapp.board.PagingDTO" alias="Paging"/>
	     <typeAlias type="com.mycompany.myapp.board.CommentDTO" alias="Comment"/>
	     <typeAlias type="com.mycompany.myapp.store.StoreDTO" alias="Store"/>
	     <typeAlias type="com.mycompany.common.SearchParam" alias="Param"/>
	     <typeAlias type="com.mycompany.myapp.banner.BannerDTO" alias="Banner"/>
	     <typeAlias type="com.mycompany.myapp.lineup.LineupDTO" alias="Lineup"/>
	</typeAliases>
		
	<!-- mappers -->
	<mappers>
		 <mapper resource="spring/mapper/myapp/UserMapper.xml" />
		 <mapper resource="spring/mapper/myapp/BoardMapper.xml" />
		 <mapper resource="spring/mapper/myapp/StoreMapper.xml" />
		 <mapper resource="spring/mapper/myapp/BannerMapper.xml" />
		 <mapper resource="spring/mapper/myapp/LineupMapper.xml" />
	</mappers>
	
</configuration>
